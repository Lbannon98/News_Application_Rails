<!-- Displaying profile page by adding user icon and accessing user data -->

<div class="container">

  <div class="row">

    <div class="col-sm-12 col-md-4 col-lg-2"></div>


      <h1>Profile</h1>

      <br/>
      <br/>

      <div class="container" style="text-align: center;">

        <%= image_tag "user_icon.png", size: "220x220"%>

        <p></p>

        <h3 class="card-text"> Name: <%= @user.name %> </h3>

        <h3 class="card-text"> Email: <%= @user.email %> </h3>

        <h3 class="card-text"> Age: <%= @user.age %> </h3>

        <h3 class="card-text"> Country: <%= @user.country%></h3>

      </div>


    <div class="col-sm-12 col-md-4 col-lg-2"></div>

  </div>

</div>